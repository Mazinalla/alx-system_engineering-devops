#!/usr/bin/env bash
# Configure your Nginx server so that /redirect_me is redirecting to another page.

# Step 1: Update package lists and install Nginx
sudo apt update -y
sudo apt install nginx -y

# Step 2: Configure Nginx for the redirection
# Create a new server block configuration
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    # Redirect /redirect_me to the desired page
    location /redirect_me {
        return 301 https://www.example.com;  # Change to your desired URL
    }

    # Default root directory
    location / {
        root /var/www/html;
        index index.html index.htm;
    }
}
EOF

# Step 3: Restart Nginx to apply the changes
sudo systemctl restart nginx

# Step 4: Enable Nginx to start on boot
sudo systemctl enable nginx
